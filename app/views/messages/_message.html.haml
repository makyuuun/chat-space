.mainchat__messages__message
  .mainchat__messages__message__upper
    .mainchat__messages__message__upper__user-name
      = message.user.name
    .mainchat__messages__message__upper__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .mainchat__messages__message__lower
    - if message.content.present?
      %p.mainchat__messages__message__lower__content
        = message.content
    = image_tag message.image.url, class: 'mainchat__messages__message__lower__image' if message.image.present?
