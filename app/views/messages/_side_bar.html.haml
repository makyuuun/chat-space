.sidebar
  .sidebar__header
    %h3.sidebar__header__username
      = current_user.name
    %ul.sidebar__header__lists
      %li.list
        = link_to new_group_path do
          = icon('fa', 'edit',class: 'icon')
      %li.list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

  .sidebar__group-list
    - current_user.groups.each do |group|
      .sidebar__group-list__group
        = link_to group_messages_path(group) do
          .sidebar__group-list__group__name
            = group.name
          .sidebar__group-list__group__message
            = group.show_last_message
    
